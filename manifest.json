{
  "manifest_version": 3,
  "name": "Area Links",
  "version": "1.6.4",
  "description": "Select a webpage area to open all links within it.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/copy_cursor.svg" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "activate-selection": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "Activate area selection to open links"
    },
    "activate-selection-copy": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Activate area selection to copy links"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}