{
  "manifest_version": 3,
  "name": "Select and Open Links",
  "version": "1.2",
  "description": "Opens all links within a selected area using a customizable hotkey.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "commands": {
    "activate_selection": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Command+Shift+Y"
      },
      "description": "Activate selection mode"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}